{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/crates/tauri-config-schema/schema.json",
  "productName": "Sovereign GE",
  "version": "0.1.0",
  "identifier": "com.sovereign.ge",
  "build": {
    "frontendDist": "../../frontend/build",
    "beforeBuildCommand": "npm run build --prefix ../../frontend",
    "beforeDevCommand": "npm run dev --prefix ../../frontend"
  },
  "app": {
    "windows": [
      {
        "title": "Sovereign GE",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'; script-src 'self'; img-src 'self' asset: http://asset.localhost"
    }
  }
}
